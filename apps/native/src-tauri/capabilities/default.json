{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "dialog:default",

    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$AUDIO/**" },
        { "path": "$CACHE/**" },
        { "path": "$CONFIG/**" },
        { "path": "$DATA/**" },
        { "path": "$LOCALDATA/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$EXE/**" },
        { "path": "$FONT/**" },
        { "path": "$HOME/**" },
        { "path": "$PICTURE/**" },
        { "path": "$PUBLIC/**" },
        { "path": "$RUNTIME/**" },
        { "path": "$TEMPLATE/**" },
        { "path": "$VIDEO/**" },
        { "path": "$RESOURCE/**" },
        { "path": "$APP/**" },
        { "path": "$LOG/**" },
        { "path": "$TEMP/**" },
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCALDATA/**" },
        { "path": "$APPCACHE/**" },
        { "path": "$APPLOG/**" }
      ]
    },

    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-stat",
    "fs:allow-lstat"
  ]
}
